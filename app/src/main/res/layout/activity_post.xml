<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".Activity.ShowpasswdActivity">

            <TextView
                android:id="@+id/post_text"
                android:layout_width="420dp"
                android:layout_height="wrap_content"
                android:background="#B5D4F1"
                android:ems="10"
                android:textSize="30dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <ImageView
                android:id="@+id/iuser"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:onClick="opponinfo"
                android:src="@drawable/human" />

            <TextView
                android:id="@+id/post_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/nanumsquarel"
                android:text="익명"
                android:textSize="8pt" />

            <TextView
                android:id="@+id/post_date"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/nanumsquarel"
                android:text="날짜"
                android:textSize="8pt" />

            <ImageButton
                android:id="@+id/send_letter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:fontFamily="@font/nanumsquarer"
                android:onClick="openMessage"
                android:src="@drawable/coment_icon2"
                android:text="쪽지 보내기"
                app:backgroundTint="#B5D4F1" />


        </LinearLayout>

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/nanumsquarel"
            android:textSize="20pt" />

        <ImageView
            android:id="@+id/post_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/post_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/nanumsquarel"
            android:gravity="start|top"
            android:textSize="10pt" />
        android:textSize="10pt"
        android:gravity="start|top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/post_comentsinput"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:fontFamily="@font/nanumsquarel"
                android:hint="댓글을 입력하세요."
                android:textSize="10pt"></EditText>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanumsquarel"
                android:onClick="postcoments_inputkey"
                android:text="확인"
                android:textSize="10pt"
                app:backgroundTint="#B5D4F1"></Button>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/postrecycle_coments"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0" />
    </LinearLayout>

</ScrollView>